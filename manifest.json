{
  "manifest_version": 3,
  "name": "Save Me A Click",
  "version": "1.0.1",
  "description": "Summarize any link with a right-click",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "css": ["css/overlay.css"]
    }
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
